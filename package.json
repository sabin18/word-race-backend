{
  "name": "ncds-tracker",
  "version": "1.0.0",
  "description": "A platform for recording ncds patients medecine.",
  "main": "index.js",
  "scripts": {
    "dev": "SET NODE_ENV=development && babel-watch src/index.js",
    "production": "npm run db:migrate && NODE_ENV=production babel-watch src/index.js",
    "lint": "eslint . --ext .js",
    "db:refresh": "NODE_ENV=production && sequelize db:migrate:undo:all && sequelize db:migrate && sequelize db:seed:all",
    "db:seed": "NODE_ENV=production && sequelize db:seed:all",
    "db:migrate": "NODE_ENV=production && sequelize db:migrate",
    "migrate": "NODE_ENV=test sequelize db:migrate",
    "rollback": " cross-env NODE_ENV=test sequelize db:migrate:undo:all",
    "seed": " cross-env NODE_ENV=test sequelize db:seed:all",
    "test": "npm run rollback && npm run migrate && npm run seed &&  npm run test-suite",
    "test-suite": "SET NODE_ENV=test && nyc --reporter=html --reporter=text mocha src/tests/index.spec.js --require @babel/register --timeout 20000 --exit",
    "coveralls": "nyc report --reporter=text-lcov| coveralls",
    "localbuild": "babel src --out-dir lib --copy-files --source-maps --watch"
  },
  "nyc": {
    "exclude": [
      "**/**/**/tests",
      "**/**/**/Utils",
      "**/**/**/index.js",
      "**/**/**/**/config"
    ]
  },
  "author": "roger sabin",
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "@hapi/joi": "^17.1.1",
    "@hapi/joi-date": "^2.0.1",
    "babel-eslint": "^8.2.6",
    "babel-watch": "^7.0.0",
    "bcrypt": "^5.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cloudinary": "^1.21.0",
    "connect-multiparty": "^2.2.0",
    "cors": "^2.8.5",
    "coveralls": "^3.1.0",
    "cross-env": "^7.0.2",
    "csv-parser": "^2.3.3",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.2",
    "errorhandler": "^1.5.1",
    "eslint": "^4.19.1",
    "express": "^4.17.1",
    "express-jwt": "^5.3.3",
    "express-session": "^1.17.1",
    "ip": "^1.1.5",
    "method-override": "^3.0.0",
    "moment": "^2.27.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.6",
    "p-iteration": "^1.1.8",
    "password-hash": "^1.2.2",
    "path": "^0.12.7",
    "pg": "^8.0.3",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.21.7",
    "sequelize-cli": "^5.5.1",
    "twilio": "^3.48.1",
    "underscore": "^1.10.2"
  },
  "devDependencies": {
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "husky": "^4.2.5",
    "mocha": "^7.1.2",
    "nyc": "^15.0.1"
  }
}
